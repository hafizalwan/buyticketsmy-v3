<div class="row">
  <div class="col s10 offset-s1">
    <div class="card-panel">

      <h2 class="center">Edit Profile</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'shared/devisemes' %>

        <div class="input-field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", type: "email", class: "validate" %>
        </div><!-- input-field -->

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="input-field">
          <%= f.label :fullname %><br />
          <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", id: "fullname", type: "text" %>
          <span class="helper-text">Full name max 15 characters</span>
        </div><!-- input-field -->

        <div class="input-field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "new-password", id: "password", type: "password", class: "validate" %>
          <span class="helper-text">Don't want to change it? Leave it..</span>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div><!-- input-field -->

        <div class="input-field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password", type: "password", class: "validate" %>
        </div><!-- input-field -->

        <div class="input-field">
          <%= f.label :current_password %><br />
          <%= f.password_field :current_password, autocomplete: "new-password", id: "password", type: "password", class: "validate" %>
        </div><!-- input-field -->

        <br/>

        <div class="actions">
          <%= button_tag type: "submit", class: "btn waves-effect waves-light", name: "action" do %>
            Update<span><i class="material-icons right">update</i></span>
          <% end %>
        </div><!-- actions -->
      <% end %>

      <br/>

      <%= link_to "Back", :back %>

    </div>
  </div>
</div>
