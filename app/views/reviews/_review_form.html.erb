<!-- Modal Trigger -->
  <a class="waves-effect waves-light btn modal-trigger" href="#modal_<%= reservation.id %>">Review</a>

  <!-- Modal Structure -->
  <div id="modal_<%= reservation.id %>" class="modal">
    <div class="modal-content">
      <h4>Leave your review</h4>
      <%= form_for current_user.guest_review.new do |f| %>
        <div class="input-field center">
          <%= f.text_field :star %>
        </div><!-- input-field -->
        <div class="input-field">
          <%= f.text_area :comment, class: "materialize-textarea" %>
        </div><!-- input-field -->

        <%= f.hidden_field :activity_id, value: reservation.activity.id %>
        <%= f.hidden_field :reservation_id, value: reservation.id %>
        
        <div class="center">
          <%= f.submit "Submit", class: "btn waves-effect waves-light" %>
        </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
  </div>
